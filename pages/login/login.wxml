<form bindsubmit='loginFormSubmit' bindreset='formRest'>
   <view class="content">
      <view class="account">
        <view class="title">账号</view>
        <view class="num">
          <input type='text' name='userName' placeholder='请输入邮箱' placeholder-style='color:#999999;'></input>
        </view>
      </view>
      <view class="hr"></view>

      <view class="account">
          <view class="title">密码</view>
          <view class="num">
            <input type='password' name='password' placeholder='请输入密码' placeholder-style='color:#999999;'></input>
          </view>
      </view>
      <view class="hr"></view>

     <button  type="primary" class="btn" form-type='submit'>登录</button>
     <view class="operate">
      <view><navigator url="../phoneLogin/phoneLogin">短信验证码登录</navigator></view>
      <view><navigator url="../accountMark/accountMark">如何获取账号密码?</navigator></view>
    
  </view>
</view>
</form>

